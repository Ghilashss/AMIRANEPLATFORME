# Variables d'environnement
NODE_ENV=production
PORT=1000

# Base de données MongoDB (MongoDB Atlas en production)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/platforme?retryWrites=true&w=majority

# JWT Secret (GÉNÉRER UN SECRET FORT EN PRODUCTION!)
JWT_SECRET=CHANGE_ME_WITH_STRONG_SECRET_64_CHARS_MIN
JWT_EXPIRE=7d

# CORS Origin (domaine frontend)
CORS_ORIGIN=https://ton-domaine.com

# URLs
FRONTEND_URL=https://ton-domaine.com
API_URL=https://platforme-backend-production.up.railway.app

# Email Configuration (optionnel pour les notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=votre_email@gmail.com
EMAIL_PASSWORD=votre_mot_de_passe_app

# Upload limits
MAX_FILE_SIZE=5242880
